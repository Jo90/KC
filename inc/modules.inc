        type:'css'
    },
    'j-css-pod-report':{
        fullpath:'/css/pod/report.css',
        type:'css'
    },
    'j-css-pod-usr':{
        fullpath:'/css/pod/usr.css',
        type:'css'
    },
    'j-css-mod-logon':{
        fullpath:'/css/mod/logon.css',
        type:'css'
    },
    /**
     * modules
     */
    'j-mod-act':{
        fullpath:'/mod/act.js',
        requires:['j-lib','j-css-mod-act']
