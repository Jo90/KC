    },
    'j-yui3-sugar': {
         fullpath: '/lib/yui3-sugar.js',
         requires:['node','transition']
    },
    /**
     * widgets
     */
    'j-widget':{
        fullpath:'/widget/base.js',
        requires:[
            'j-lib',
            'j-widget-calendar',
            'j-widget-list',
            'j-widget-message'
